// tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.server.tsbuildinfo",
    "outDir": "./dist/server",
    "rootDir": "./",                    // ← Allow entire monorepo
    "module": "node16",                 // ← Critical: enables import.meta
    "moduleResolution": "node16",       // ← Required with node16
    "allowImportingTsExtensions": false,
    "noEmitOnError": true
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "vite.config.ts",
    "server/vite.ts"
  ],
  "exclude": [
    "client/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}