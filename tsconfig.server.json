// tsconfig.server.json   ‚Üê create this file in your repo root
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}